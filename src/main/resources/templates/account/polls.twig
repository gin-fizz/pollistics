{% extends "../layouts/main.twig" %}

{% block pageTitle %}Login - Pollistics{% endblock %}
{% block description %}Login on Pollistics{% endblock %}

{% block content %}
<h1>Polls from {{ user.username }}</h1>
<ul class="cta-list">
{% for poll in polls %}
	<li>
		<div>
			<a href="/{{ poll.slug }}">{{ poll.title }}</a>
			<form method="post" action="/polls/delete/{{ poll.id }}">
        		<input type="submit" value="delete">
        		<input type="hidden" name="{{ _csrf.parameterName }}" value="{{ _csrf.token }}"/>
        	</form>
		</div>
		
	</li>
{% endfor %}
</ul>
<a href="/account" class="cta"> Go back to my account</a>
{% endblock %}
